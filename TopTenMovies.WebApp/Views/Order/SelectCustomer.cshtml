@model IEnumerable<TopTenMovies.DataAccess.Entities.Customer>

@{
    ViewData["Title"] = "Customer Selection";
}

<h1>Choose Customer for Order</h1>

<form asp-action="SetCustomer">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Selection
                </th>
                <th>
                    CustomerID
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="radio" name="selectCustomer" value="@Html.DisplayFor(modelItem => item.CustomerId)" required />
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group text-center">
        <input type="submit" value="Choose Customer" class="btn btn-primary btn-outline-info" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to Order Page</a>
</div>